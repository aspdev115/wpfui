<Page
    x:Class="WPFUI.Demo.Views.Pages.Controls"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFUI.Demo.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpfui="clr-namespace:WPFUI.Controls;assembly=WPFUI"
    Title="Controls"
    d:DesignHeight="1750"
    d:DesignWidth="800"
    Style="{StaticResource UiPageScrollable}"
    mc:Ignorable="d">

    <Grid Margin="0,0,0,12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                Margin="0,0,0,18"
                FontSize="20"
                FontWeight="Medium"
                Text="Controls" />

            <wpfui:Icon
                Grid.Column="1"
                VerticalAlignment="Center"
                Filled="True"
                Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                Glyph="Info28"
                ToolTip="Won't You Be My Neighbor. It's a beautiful day in this neighborhood, A beautiful day for a neighbor. Would you be mine? Could you be mine?" />
        </Grid>

        <StackPanel Grid.Row="1">
            <TextBlock
                Margin="0,0,0,8"
                FontWeight="Bold"
                Text="Interactive" />

            <wpfui:CardControl
                Title="Snackbar"
                Margin="0,0,0,8"
                Glyph="CommentMultiple28"
                Subtitle="Animated card with a notification displayed at the bottom of the application.">
                <wpfui:Button
                    Appearance="Secondary"
                    Click="Button_ShowSnackbar_Click"
                    Content="Show" />
            </wpfui:CardControl>

            <wpfui:CodeBlock Margin="0,0,0,8">
                &lt;wpfui:Snackbar Timeout=&quot;6000&quot; Title=&quot;Hello World&quot;&gt;\n
                \t&lt;TextBlock Text=&quot;Hello World&quot;&gt;\n
                &lt;wpfui:Snackbar/&gt;
            </wpfui:CodeBlock>

            <wpfui:CardControl
                Title="Dialog"
                Margin="0,0,0,8"
                Glyph="Whiteboard24"
                Subtitle="Displays a large card with a slightly transparent background and two action buttons.">
                <wpfui:Button
                    Appearance="Secondary"
                    Click="Button_ShowDialog_Click"
                    Content="Show" />
            </wpfui:CardControl>

            <wpfui:CodeBlock Margin="0,0,0,8">
                &lt;wpfui:Dialog Click=&quot;RootDialog_Click&quot; Show=&quot;False&quot;&gt;\n
                \t&lt;TextBlock Text=&quot;Hello World&quot;&gt;\n
                &lt;wpfui:Dialog/&gt;
            </wpfui:CodeBlock>

            <wpfui:CardControl
                Title="Message Box"
                Margin="0,0,0,8"
                Glyph="PanelSeparateWindow20"
                Subtitle="Alert displayed outside the main window.">
                <wpfui:Button
                    Appearance="Secondary"
                    Click="Button_ShowBox_Click"
                    Content="Show" />
            </wpfui:CardControl>

            <wpfui:CodeBlock Margin="0,0,0,8">
                &lt;wpfui:CardControl Title=&quot;Message Box&quot; Glyph=&quot;PanelSeparateWindow20&quot;&gt;\n
                \t&lt;wpfui:Button Content=&quot;Show&quot;&gt;\n
                &lt;wpfui:CardControl/&gt;
            </wpfui:CodeBlock>

            <wpfui:CardCollapse
                Title="Collapsable card with an additional controls"
                Margin="0,0,0,8"
                Glyph="PanelLeftExpand20"
                Subtitle="Useful if, for example, you want to add a button for copying the contents of the card.">
                <wpfui:CardCollapse.AdditionalContent>
                    <wpfui:Button
                        Margin="0,0,16,0"
                        Appearance="Secondary"
                        Content="Copy" />
                </wpfui:CardCollapse.AdditionalContent>
                <TextBlock Text="3wiedzmin3najlepszy" />
            </wpfui:CardCollapse>

            <wpfui:CodeBlock Margin="0,0,0,8">
                &lt;wpfui:CardCollapse Title=&quot;Message Box&quot; Glyph=&quot;PanelSeparateWindow20&quot;&gt;\n
                \t&lt;wpfui:CardCollapse.AdditionalContent&gt;\n
                \t\t&lt;wpfui:Button Appearance=&quot;Secondary&quot; Content=&quot;Copy&quot;/&gt;\n
                \t&lt;wpfui:CardCollapse.AdditionalContent/&gt;\n
                \t&lt;TextBlock Text=&quot;Hello World&quot;&gt;\n
                &lt;wpfui:CardCollapse/&gt;
            </wpfui:CodeBlock>

            <wpfui:CardCollapse
                Title="Collapsable card with an ComboBox"
                Margin="0,0,0,8"
                Glyph="PanelLeftExpand20"
                Subtitle="You can add any control inside, makes it easier to create e.g. settings page.">
                <wpfui:CardCollapse.AdditionalContent>
                    <ComboBox
                        MinWidth="100"
                        Margin="0,0,16,0"
                        SelectedIndex="0">
                        <ComboBoxItem Content="English" />
                        <ComboBoxItem Content="Polish" />
                    </ComboBox>
                </wpfui:CardCollapse.AdditionalContent>
                <StackPanel>
                    <TextBlock
                        FontStyle="Italic"
                        Text="Człowiek wyruszył na spotkanie innych światów, innych cywilizacji, nie poznawszy do końca własnych zakamarków, ślepych dróg, studni, zabarykadowanych, ciemnych drzwi."
                        TextWrapping="Wrap" />
                    <TextBlock FontWeight="Bold" Text=" - Stanisław Lem" />
                </StackPanel>
            </wpfui:CardCollapse>

            <wpfui:CodeBlock>
                &lt;wpfui:CardCollapse Title=&quot;Message Box&quot; Glyph=&quot;PanelSeparateWindow20&quot;&gt;\n
                \t&lt;wpfui:CardCollapse.AdditionalContent&gt;\n
                \t\t&lt;ComboBox/&gt;\n
                \t&lt;wpfui:CardCollapse.AdditionalContent/&gt;\n
                \t&lt;TextBlock Text=&quot;Hello World&quot;&gt;\n
                &lt;wpfui:CardCollapse/&gt;
            </wpfui:CodeBlock>

            <TextBlock
                Margin="0,32,0,8"
                FontWeight="Bold"
                Text="Rating" />

            <wpfui:Rating Content="Rate me" />

            <TextBlock
                Margin="0,32,0,8"
                FontWeight="Bold"
                Text="Buttons" />

            <Grid Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <wpfui:Button
                    Grid.Column="0"
                    Margin="0,0,2,0"
                    Content="Button" />
                <wpfui:Button
                    Grid.Column="1"
                    Margin="2,0,2,0"
                    Appearance="Success"
                    Content="Button with Glyph"
                    Glyph="Apps28" />
                <wpfui:Button
                    Grid.Column="2"
                    Margin="2,0,2,0"
                    Appearance="Secondary"
                    Content="Secondary button"
                    Glyph="Lasso28" />
                <wpfui:Button
                    Grid.Column="3"
                    Margin="2,0,0,0"
                    Appearance="Danger"
                    Content="Danger button"
                    Glyph="AlertOn24" />
            </Grid>

            <wpfui:CodeBlock Margin="0,0,0,12">
                &lt;wpfui:Button Appearance=&quot;Secondary&quot; Glyph=&quot;Apps28&quot; /&gt;
            </wpfui:CodeBlock>

            <Grid Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <ToggleButton
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    Content="Toggle button" />
                <ToggleButton
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    Content="Toggled"
                    IsChecked="True" />
                <ToggleButton
                    Grid.Column="2"
                    HorizontalAlignment="Center"
                    Content="Disabled"
                    IsEnabled="False" />
            </Grid>

            <wpfui:CodeBlock>
                &lt;ToggleButton Content=&quot;Toggle me&quot; IsChecked=&quot;True&quot; /&gt;
            </wpfui:CodeBlock>

            <TextBlock
                Margin="0,32,0,8"
                FontWeight="Bold"
                Text="Progress" />

            <ProgressBar Margin="0,0,0,8" Value="0" />
            <ProgressBar Margin="0,0,0,8" Value="80" />
            <ProgressBar Margin="0,0,0,8" Value="100" />
            <ProgressBar Margin="0,0,0,8" IsIndeterminate="True" />

            <wpfui:CodeBlock>
                &lt;ProgressBar IsIndeterminate=&quot;True&quot; /&gt;
            </wpfui:CodeBlock>

            <TextBlock
                Margin="0,32,0,8"
                FontWeight="Bold"
                Text="TabControl" />

            <TabControl Margin="0,0,0,12">
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <wpfui:Icon Margin="0,0,6,0" Glyph="XboxConsole24" />
                            <TextBlock Text="Hello" />
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>
                        <TextBlock Margin="12" Text="Hello" />
                    </Grid>
                </TabItem>
                <TabItem IsSelected="True">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <wpfui:Icon Margin="0,0,6,0" Glyph="StoreMicrosoft16" />
                            <TextBlock Text="World" />
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>
                        <TextBlock Margin="12" Text="World" />
                    </Grid>
                </TabItem>
            </TabControl>

            <wpfui:CodeBlock>
                &lt;TabControl&gt;\n
                \t&lt;TabItem Header=&quot;Hello&quot;&gt;\n
                \t\t&lt;TextBlock Text=&quot;World&quot;/&gt;\n
                \t&lt;/TabItem&gt;\n
                &lt;TabControl/&gt;
            </wpfui:CodeBlock>

            <TextBlock
                Margin="0,32,0,8"
                FontWeight="Bold"
                Text="ListBox" />

            <ListBox
                Margin="0,0,0,12"
                ItemsSource="{Binding ListBoxItemCollection}"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                SelectedIndex="0" />

            <TextBlock
                Margin="0,32,0,8"
                FontWeight="Bold"
                Text="TreeView" />

            <TreeView
                Margin="0,0,0,12"
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}">
                <TreeViewItem Header="Employee1" IsExpanded="True">
                    <TreeViewItem Header="Jesper Aaberg" />
                    <TreeViewItem Header="Employee Number" IsExpanded="True">
                        <TreeViewItem Header="12345" IsSelected="True" />
                    </TreeViewItem>
                    <TreeViewItem Header="Work Days">
                        <TreeViewItem Header="Monday" />
                        <TreeViewItem Header="Tuesday" />
                        <TreeViewItem Header="Thursday" />
                    </TreeViewItem>
                </TreeViewItem>
                <TreeViewItem Header="Employee2">
                    <TreeViewItem Header="Dominik Paiha" />
                    <TreeViewItem Header="Employee Number">
                        <TreeViewItem Header="98765" />
                    </TreeViewItem>
                    <TreeViewItem Header="Work Days">
                        <TreeViewItem Header="Tuesday" />
                        <TreeViewItem Header="Wednesday" />
                        <TreeViewItem Header="Friday" />
                    </TreeViewItem>
                </TreeViewItem>
            </TreeView>

            <wpfui:CodeBlock>
                &lt;TreeView&gt;\n
                \t&lt;TreeViewItem Header=&quot;Hello&quot; IsExpanded=&quot;True&quot;&gt;\n
                \t\t&lt;TreeViewItem Header=&quot;World&quot; IsSelected=&quot;True&quot; /&gt;\n
                \t&lt;/TreeViewItem&gt;\n
                &lt;TreeView/&gt;
            </wpfui:CodeBlock>

            <TextBlock
                Margin="0,32,0,8"
                FontWeight="Bold"
                Text="Visual" />

            <Label Content="WPFUI Spinner (IN PROGRESS)" />
            <wpfui:Spinner Value="50" />
        </StackPanel>
    </Grid>
</Page>
