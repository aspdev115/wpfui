<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <LinearGradientBrush x:Key="UiBrushBackgroundGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0" Color="#1b202c" />
        <GradientStop Offset="0.5" Color="#24252b" />
        <GradientStop Offset="1.0" Color="#1d2026" />
    </LinearGradientBrush>

    <SolidColorBrush x:Key="UiBrushBackground" Color="#202020" />
    <SolidColorBrush x:Key="UiBrushBackgroundSecondary" Color="#232323" />
    <SolidColorBrush x:Key="UiBrushForeground" Color="#ffffff" />
    <SolidColorBrush x:Key="UiBrushForegroundSecondary" Color="#b4b4b4" />

    <!--  An element brush is a contrasting version of the background brush to allow a nice transparent background.  -->
    <SolidColorBrush x:Key="UiBrushElement" Color="#08FFFFFF" />
    <SolidColorBrush x:Key="UiBrushElementSolid" Color="#2a2b32" />
    <SolidColorBrush x:Key="UiBrushElementHover" Color="#15FFFFFF" />
    <SolidColorBrush x:Key="UiBrushElementBorder" Color="#06FFFFFF" />
    <SolidColorBrush x:Key="UiBrushElementDisabled" Color="#232323" />
    <SolidColorBrush x:Key="UiBrushElementActive" Color="#4cc2ff" />
    <SolidColorBrush x:Key="UiBrushElementClose" Color="#c32b1c" />

    <SolidColorBrush x:Key="UiBrushHyperlink" Color="#99ebff" />
    <SolidColorBrush x:Key="UiBrushButtonForeground" Color="#000000" />
    <SolidColorBrush x:Key="UiBrushButtonBackground" Color="#4cc2ff" />
    <SolidColorBrush x:Key="UiBrushButtonHover" Color="#48b3ee" />

    <SolidColorBrush x:Key="UiBrushNavigationForeground" Color="#ffffff" />
    <SolidColorBrush x:Key="UiBrushNavigationBackground" Color="#202020" />
    <SolidColorBrush x:Key="UiBrushNavigationBadgeActive" Color="#4cc2ff" />

    <SolidColorBrush x:Key="UiBrushNavigationButtonForeground" Color="#ffffff" />
    <SolidColorBrush x:Key="UiBrushNavigationButtonBackground" Color="#202020" />
    <SolidColorBrush x:Key="UiBrushNavigationButtonHover" Color="#10FFFFFF" />
    <SolidColorBrush x:Key="UiBrushNavigationButtonActive" Color="#08FFFFFF" />
    <SolidColorBrush x:Key="UiBrushNavigationButtonActiveHover" Color="#15FFFFFF" />

</ResourceDictionary>